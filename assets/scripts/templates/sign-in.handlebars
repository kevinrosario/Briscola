<div class="row">
  <div class="col-12">
    <div class="card text-white bg-dark mb-3">
      <div class="card-header">
        Sign-In
      </div>
      <div class="card-body">
        <form class="form" id="sign-in">
          <div class="form-group">
            <label for="sign-in-email">Email address</label>
            <input id="sign-in-email" type="email" name="credentials[email]" class="form-control login-form" aria-describedby="emailHelp" placeholder="Enter email" required>
          </div>
          <div class="form-group">
            <label for="sign-in-password">Password</label>
            <input id="sign-in-password" type="password" name="credentials[password]" class="form-control login-form" placeholder="Password" required>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
      <div class="card-footer bg-transparent">
        <label>New User?
          <a id="display-sign-up-modal" href="#" data-toggle="modal" data-target="#sign-up-modal">Sign-up</a>
        </label>
      </div>
    </div>
  </div>
</div>
